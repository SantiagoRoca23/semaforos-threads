<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/degradado"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivUno"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/light_off" />

    <Button
        android:id="@+id/btnFase1"
        android:text="FASE 1: Encender/Apagar"
        android:onClick="startFase1"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnFase2"
        android:text="FASE 2: R->A->V cada 5s"
        android:onClick="startFase2"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/ivDos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/light_off" />

    <Button
        android:id="@+id/btnFase3"
        android:text="FASE 3: Segundo recurso"
        android:onClick="startFase3"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
